<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Ember.js</title>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag "templates/todos" %>
  </head>
  <body>

  <script type="text/x-handlebars">
    <section id="portfolio">
      <header id="header">
        <h2>Title</h2>
        {{#active-li currentWhen="about"}}
          {{link-to 'About' 'about'}}
        {{/active-li}}
        {{#active-li currentWhen="skills"}}
          {{link-to 'Skills' 'skills'}}
        {{/active-li}}
        {{#active-li currentWhen="blog"}}
          {{link-to 'Blog' 'blog'}}
        {{/active-li}}
        {{#active-li currentWhen="work"}}
          {{link-to 'Work' 'work.photography'}}
        {{/active-li}}
      </header>
      <section id="main">
        {{outlet}}
      </section>
      <footer id="footer">
       <hr>
        This is the footer
      </footer>
    </section>
  </script>
  
  <script type="text/x-handlebars" data-template-name="about">
    <ul>
    {{#each person in model}}
      <li>{{person.name}}</li>
    {{/each}}
  </ul>
    About 
  </script>
  
  <script type="text/x-handlebars" data-template-name="skills">
    skills
  </script>

  <script type="text/x-handlebars" data-template-name="blog">
    blog
  </script>

  <script type="text/x-handlebars" data-template-name="work/photography">
    {{#active-li currentWhen="work.photography"}}
      {{link-to 'Visit /work' 'work.photography'}}
    {{/active-li}}
    {{#active-li currentWhen="work.web"}}
      {{link-to 'Visit /web' 'work.web'}}
    {{/active-li}}
    {{#active-li currentWhen="work.front-end"}}
      {{link-to 'Visit /front-end' 'work.front-end'}}
    {{/active-li}}
    photography<br>
  </script>

  <script type="text/x-handlebars" data-template-name="work/index">
    {{#active-li currentWhen="work.photography"}}
      {{link-to 'Visit /work' 'work.photography'}}
    {{/active-li}}
    {{#active-li currentWhen="work.web"}}
      {{link-to 'Visit /web' 'work.web'}}
    {{/active-li}}
    {{#active-li currentWhen="work.front-end"}}
      {{link-to 'Visit /front-end' 'work.front-end'}}
    {{/active-li}}
    work<br>
  </script>

  <script type="text/x-handlebars" data-template-name="work/web">
    {{#active-li currentWhen="work.photography"}}
      {{link-to 'Visit /work' 'work.photography'}}
    {{/active-li}}
    {{#active-li currentWhen="work.web"}}
      {{link-to 'Visit /web' 'work.web'}}
    {{/active-li}}
    {{#active-li currentWhen="work.front-end"}}
      {{link-to 'Visit /front-end' 'work.front-end'}}
    {{/active-li}}
    web<br>
  </script>

  <script type="text/x-handlebars" data-template-name="work/front-end">
    {{#active-li currentWhen="work.photography"}}
      {{link-to 'Visit /work' 'work.photography'}}
    {{/active-li}}
    {{#active-li currentWhen="work.web"}}
      {{link-to 'Visit /web' 'work.web'}}
    {{/active-li}}
    {{#active-li currentWhen="work.front-end"}}
      {{link-to 'Visit /front-end' 'work.front-end'}}
    {{/active-li}}
    front-end<br>
  </script>
    
  </body>
</html>